{
  "manifest_version": 3,
  "name": "ServiceNow Environment Switcher",
  "version": "1.0.0",
  "description": "ServiceNowの複数環境を簡単に切り替えるツール",
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Shift+E"
      },
      "description": "ポップアップを開く"
    },
    "switch-env-1": {
      "suggested_key": {
        "default": "Alt+Shift+1"
      },
      "description": "1番目の環境に切り替え"
    },
    "switch-env-2": {
      "suggested_key": {
        "default": "Alt+Shift+2"
      },
      "description": "2番目の環境に切り替え"
    },
    "switch-env-3": {
      "suggested_key": {
        "default": "Alt+Shift+3"
      },
      "description": "3番目の環境に切り替え"
    }
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.service-now.com/*",
    "https://*.servicenow.com/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}